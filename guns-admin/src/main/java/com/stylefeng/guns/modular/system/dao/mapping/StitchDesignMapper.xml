<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.StitchDesignMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.StitchDesign">
        <id column="id" property="id" />
        <result column="clothing_type" property="clothingType" />
        <result column="clothing_gender" property="clothingGender" />
        <result column="stitch_attr" property="stitchAttr" />
        <result column="stitch_key" property="stitchKey" />
        <result column="stitch_name" property="stitchName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, clothing_type AS clothingType, clothing_gender AS clothingGender, stitch_attr AS stitchAttr, stitch_key AS stitchKey, stitch_name AS stitchName
    </sql>
    <select id="list" resultType="map">
        SELECT * from stitch_design WHERE 1=1
        <if test="condition != null and condition.gender!=null and condition.gender != ''">
            and clothing_gender =#{condition.gender}
        </if>
        <if test="condition != null and condition.type!=null and condition.type != ''">
            and clothing_type =#{condition.type}
        </if>
        <if test="condition != null and condition.attr!=null and condition.attr != ''">
            and stitch_attr =#{condition.attr}
        </if>
        order by id ASC
    </select>
</mapper>
