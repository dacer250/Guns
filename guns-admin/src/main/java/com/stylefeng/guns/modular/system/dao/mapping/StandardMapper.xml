<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.StandardMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.Standard">
		<id column="id" property="id" />
		<result column="height" property="height" />
		<result column="weight" property="weight" />
		<result column="bust" property="bust" />
		<result column="middleWaist" property="middleWaist" />
		<result column="shoulder" property="shoulder" />
		<result column="sleeve" property="sleeve" />
		<result column="collar" property="collar" />
		<result column="waist" property="waist" />
		<result column="hip" property="hip" />
		<result column="crotch" property="crotch" />
		<result column="length" property="length" />
	</resultMap>

	 <select id="getByHW" resultType="com.stylefeng.guns.modular.system.model.Standard">
		 select * from standard_male where height= #{h} and weight=#{w}
	 </select>

	<select id="findSpitemList"
			resultType="com.stylefeng.guns.modular.system.model.Spitem">
		select * from jeans
	</select>

</mapper>
