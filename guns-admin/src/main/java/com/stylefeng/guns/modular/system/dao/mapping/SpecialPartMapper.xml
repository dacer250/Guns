<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.SpecialPartMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.SpecialPart">
        <id column="id" property="id" />
        <result column="clothing_gender" property="clothingGender" />
        <result column="clothing_type" property="clothingType" />
        <result column="special_part_key" property="specialPartKey" />
        <result column="special_part_name" property="specialPartName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, clothing_gender AS clothingGender, clothing_type AS clothingType, special_part_key AS specialPartKey, special_part_name AS specialPartName
    </sql>
    <select id="list" resultType="map">
        SELECT  * from special_part
        <if test="condition != null and condition.gender!=null and condition.gender != ''">
            where clothing_gender =#{condition.gender}
            <if test="condition != null and condition.position!=null and condition.position != ''">
                and body_position =#{condition.position}
            </if>
        </if>
        order by id ASC
    </select>

</mapper>
