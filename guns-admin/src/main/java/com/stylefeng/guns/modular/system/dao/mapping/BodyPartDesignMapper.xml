<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.BodyPartDesignMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.BodyPartDesign">
        <id column="id" property="id" />
        <result column="body_part_id" property="bodyPartId" />
        <result column="design_choice" property="designChoice" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, body_part_id AS bodyPartId, design_choice AS designChoice
    </sql>

    <select id="list" resultType="map">
        SELECT  * from body_part_design
        <if test="condition != null ">
            where body_part_id =#{condition}
        </if>
        order by id ASC
    </select>
</mapper>
