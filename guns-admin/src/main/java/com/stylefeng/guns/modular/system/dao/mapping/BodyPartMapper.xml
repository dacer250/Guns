<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.system.dao.BodyPartMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.stylefeng.guns.modular.system.model.BodyPart">
        <id column="id" property="id" />
        <result column="clothing_gender" property="clothingGender" />
        <result column="clothing_type" property="clothingType" />
        <result column="body_part_key" property="bodyPartKey" />
        <result column="body_part_name" property="bodyPartName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, clothing_gender AS clothingGender, clothing_type AS clothingType, body_part_key AS bodyPartKey, body_part_name AS bodyPartName
    </sql>

    <select id="list" resultType="map">
    SELECT  * from body_part
    <if test="condition != null and condition.gender!=null and condition.gender != ''">
        where clothing_gender =#{condition.gender}
        <if test="condition != null and condition.type!=null and condition.type != ''">
            and clothing_type =#{condition.type}
        </if>
    </if>
    order by id ASC
</select>
</mapper>
